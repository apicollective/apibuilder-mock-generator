    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": [
    "./node_modules/*",
    "./dist/*"
  ]
}
